@using ControleDeBar.WebApp.Models

@model EditarGarcomViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Edição de Garçom";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <form action="/garcom/editar/@Model.Id" method="post">
                    <h3>Formulário de Edição</h3>

                    <div class="form-group d-grid gap-2 mt-5">
                        <label for="Nome" class="control-label fs-5">Nome:</label>
                        <input name="Nome" class="form-control" type="text" value="@Model.Nome" />
                    </div>
                    <div class="form-group d-grid gap-2 mt-3">
                        <label for="CPF" class="control-label fs-5">CPF:</label>
                        <input name="CPF" class="form-control" type="number" value="@Model.Cpf" />
                    </div>
                    <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                        <a href="/garcom">Voltar para a listagem</a>
                        <button type="submit" class="btn btn-primary rounded-4 px-5">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>