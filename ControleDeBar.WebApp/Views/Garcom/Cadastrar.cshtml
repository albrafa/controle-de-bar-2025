@using ControleDeBar.WebApp.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model CadastrarGarcomViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Cadastro de Garçom";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <form asp-action="cadastrar">
                    <h3>Formulário de Cadastro</h3>

                    <div class="form-group d-grid gap-2 mt-5">
                        <label asp-for="Nome" class="control-label fs-5">Nome:</label>
                        <input asp-for="Nome" class="form-control" />
                        
                    </div>
                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Cpf" class="control-label fs-5">CPF:</label>
                        <input asp-for="Cpf" class="form-control" />
                    </div>
                    <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                        <a href="/garcom">Voltar para a listagem</a>
                        <button type="submit" class="btn btn-primary rounded-4 px-5">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>